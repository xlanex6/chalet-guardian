<div class="container">
  <div class="row">
    <div class="photo text-center">
      <% if @job_alert.photo? %>
        <%= cl_image_tag @job_alert.photo.path, width: 1000, height: 300, crop: :fill %>
      <% else %>
        <%= image_tag 'chalet.jpg' %>
      <% end %>
    </div>
    <div class="col-md-6 col-md-offset-3 text-center">
      <h3><%= @job_alert.job_categorie.name %></h3>
      <p><em>from </em><%= @job_alert.user.company %></p>
      <span class="timestring"><%= @job_alert.start_date %></span> -
      <span class="timestring"><%= @job_alert.end_date %></span>
      <p><%= @job_alert.address %></p>
      <p><%= @job_alert.ski_resort.name %></p>
      <p><%= @job_alert.description %></p>
      <p>Post on : <%= @job_alert.created_at %></p>
      <%= link_to 'Back to list', job_alerts_path, class: "btn btn-primary btn-xl"%>
    </div>
  </div>
</div>
