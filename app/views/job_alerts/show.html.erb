<div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center">
        <h3><%= @job_alert.job_categorie.name %></h3>
        <p><em>from </em><%= @job_alert.user.company %></p>
        <span class="timestring"><%= @job_alert.start_date %></span> -
            <span class="timestring"><%= @job_alert.end_date %></span>
        <p><%= @job_alert.address %></p>
        <p><%= @job_alert.ski_resort.name %></p>
        <p><%= @job_alert.description %></p>
