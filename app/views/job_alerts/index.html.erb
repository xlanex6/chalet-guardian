<div class="container">
  <div class="row">
    <% @job_alerts.each do |job_alert| %>
      <h3><%= job_alert.job_categorie.name %></h3>
      <p><em>from</em> <%= job_alert.user.company %></p>
      <p><em><%= job_alert.ski_resort.name %></em></p>
      <p><%= job_alert.description %></p>
      <%= link_to 'All details', job_alert_path(job_alert), class: "btn btn-primary btn-xl" %>
      <hr>
    <% end %>
  </div>
</div>
